<body class="bg-gradient-primary">

    <div class="container">
        <h1>Cadastrar Usu치rio</h1>
        <p>Welcome to Cadastrar Usu치rio</p>

        <br><br>
<%- include('../partials/menu.ejs') %>
        <br>
        <br>

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block">
                        
                      <img src="/images/rick_morty1.jpg" class="img-fluid rounded mx-auto d-block">
                    </div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <form class="user form-cadastro-usuario" action="/usuario/cadastrar" method="POST" encType="multipart/form-data">
                                
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-user" name="nome" id="nomeInputID" placeholder="First Name">
                                        <span class="error-message"></span>
                                    </div>

                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-user" name="usuario" placeholder="Usu치rio">
                                            <span class="error-message"></span>
                                    </div>
                                
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user" name="email" placeholder="Email Address">
                                    <span class="error-message"></span>
                                </div>

                                <div class="form-group">
                                    <input type="date" class="form-control form-control-user" name="data_nascimento">
                                    <span class="error-message"></span>
                                </div>

                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                      <span class="input-group-text">Select image:</span>
                                    </div>
                                    <div class="custom-file">
                                      <input type="file" class="custom-file-input" id="img" name="foto" accept="image/*" onchange="loadFile(event)">
                                      <label class="custom-file-label" for="img">Choose file</label>
                                    </div>
                                  </div>

                                  <div class="form-group">
                                      <p>Imagem: </p>
                                      <img id="output" class="rounded mx-auto d-block img-fluid"/>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" class="form-control form-control-user" id="exampleInputPassword" name="senha" placeholder="Password">
                                        <span class="error-message"></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" class="form-control form-control-user" id="exampleRepeatPassword" name="senha_repetir" placeholder="Repeat Password">
                                        <span class="error-message"></span>
                                    </div>
                                </div>

                                <button type="submit" class="button_login btn btn-primary btn-user btn-block">Add Usuer</button>
                               
                            </form>

                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                        </div>
                    </div>
