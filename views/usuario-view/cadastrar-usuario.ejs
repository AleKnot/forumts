<!DOCTYPE html>
<html>
  <head>
    <title>Cadastrar Usuário</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Cadastrar Usuário</h1>
    <p>Welcome to Cadastrar Usuário</p>

    <%- include('../partials/menu.ejs') %>


    <main>

      <div>
          <h1>Welcome - Cadastrar Usuário</h1>
          <!-- <label for="">Bem vindo ao Nimix</label> -->
      </div>

      <div>
          <h2>faça seu cadastro</h2>
      </div>
      <h1>Editar: <%=editar%></h1>
      <h1><% if (editar) { %>editar<%  } else { %>cadastrar<% } %></h1>

      

      
  <section class="container">
    <% usuarios.forEach(usuario => { %>
       

        <br>

      <div class="contato">
          
          <form action="/usuario/<% if (editar) { %>alterar<%  } else { %>cadastrar<% } %>" method="POST">
              <div class="form_fields">

                  <label for="idusuario">ID Usuário</label>
                  <input type="text" name="idusuario" id="idusuario" value=" <% if (editar) { %><%=usuario.idusuario%><%}%> ">
                  <br>
                  <label for="nome">Nome</label>
                  <input type="text" name="nome" id="nome" value=" <% if (editar) { %><%=usuario.nome%><%}%> ">
                  <br>
                  <label for="usuario">usuario</label>
                  <input type="text" name="usuario" id="usuario" value="<% if (editar) { %><%=usuario.usuario%><%}%> ">
                  <br>
                  <label for="email">E-mail</label>
                  <input type="email" name="email" id="email" value="<% if (editar) { %><%=usuario.email%><%}%>">
                  <br>
                  <label for="dataNascimento">Data Nascimento</label>
                  <input type="date" name="data_nascimento" id="data_nascimento" value="<% if (editar) { %><%=usuario.data_nascimento%><%}%>">
                  <br>
                  <label for="foto">Select image:</label>
                  <!-- <input type="file" id="img" name="img" accept="image/*"> -->
                  <input type="text" name="foto" id="foto" value="<% if (editar) { %><%=usuario.foto%><%}%>">
                  <br>
                  <label for="senha">Senha</label>
                  <input type="password" name="senha" id="senha" value="<% if (editar) { %><%=usuario.senha%><%}%>">
                  <br>
                  <label for="senha_repetir">Repertir Senha</label>
                  <input type="password" name="senha_repetir" id="senha_repetir" value="<% if (editar) { %><%=usuarios.senha%><%}%>">
                  <br>
                  <br>
                 
              </div>
              <% }) %>
              
              <button class="button_login"><% if (editar) { %> Update Usuario<%  } else { %>Add Usuario <% } %></button>
          </form>
          
      </div>
      
      <br>
      <br>

      <div class="politica-senha">
          <div class="politica-tamanho">
              8 Characters
          </div>
          <div class="politica-numero">
              Contém Número
          </div>
          <div class="politica-maiuscula">
              Contém Letra Maiúscula
          </div>
          <div class="politica-especial">
              Contém caracter especial
          </div>
      </div>

    
  </body>
</html>
