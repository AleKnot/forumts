<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>ForumTs - Cadastrar Usuário</title>

    <!-- Custom fonts for this template-->
    <link href="/stylesheets/boot/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>

    <!-- Custom styles for this template-->
    <link href="/stylesheets/boot/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">
        <h1>Editar Usuário</h1>
        <p>Welcome to Editar Usuário</p>

        <br><br>
<%- include('../partials/menu-logado.ejs') %>
        <br>
        <br>
        
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block">
                        
                      <img src="/images/clip1.jpg" class="img-fluid rounded mx-auto d-block">
                    </div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Edit Your Account!</h1>
                            </div>
                            <% usuarios.forEach(usuario => { %>
                            <form class="user form-cadastro-usuario" action="/usuario/cadastrar" method="POST" encType="multipart/form-data">

                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-user" name="idusuario" id="idusuario" value="<%=usuario.idusuario%>">
                                        <span class="error-message"></span>
                                    </div>
                                    
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-user" name="nome" id="nome" value="<%=usuario.nome%>">
                                        <span class="error-message"></span>
                                    </div>

                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-user" name="usuario" id="usuario" value="<%=usuario.usuario%>">
                                            <span class="error-message"></span>
                                    </div>
                                
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user" name="email" id="email" value="<%=usuario.email%>">
                                    <span class="error-message"></span>
                                </div>

                                <div class="form-group">
                                    <input type="date" class="form-control form-control-user" name="data_nascimento" id="data_nascimento" value="<%=usuario.data_nascimento%>">
                                    <span class="error-message"></span>
                                </div>

                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                      <span class="input-group-text">Select image:</span>
                                    </div>
                                    <div class="custom-file">
                                      <input type="file" class="custom-file-input" id="img" name="foto" accept="image/*" onchange="loadFile(event)">
                                      <label class="custom-file-label" for="img">Choose file</label>
                                    </div>
                                  </div>

                                  <div class="form-group">
                                      <p>Imagem: </p>
                                      <!-- <img id="output" class="rounded mx-auto d-block img-fluid"/> -->
                                      <img id="output" src="/imagens/<%=usuario.foto%>" class="rounded mx-auto d-block img-fluid">
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" class="form-control form-control-user" name="senha" id="senha" value="<%=usuario.senha%>">
                                        <span class="error-message"></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" class="form-control form-control-user" name="senha_repetir" id="senha_repetir" value="<%=usuarios.senha%>">
                                        <span class="error-message"></span>
                                    </div>
                                </div>

                                <button type="submit" class="button_login btn btn-primary btn-user btn-block">Update Usuer</button>
                                <% }) %>
                            </form>

                            <hr>
                            <div class="text-center">
                                <a class="small" href="https://miro.medium.com/max/1200/1*mk1-6aYaf_Bes1E3Imhc0A.jpeg" target="_blank">Forgot Password?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->


    <!-- Custom scripts for all pages-->
    
</body>
<script src="/javascripts/script-cadastrar-usuario.js"></script>

</html>